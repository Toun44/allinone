<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
<display-name>webpro</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <jsp-config>
	<jsp-property-group>
		<url-pattern>*.jsp</url-pattern>
		<include-prelude>/WEB-INF/jsp/includeBeforeJsp.jsp</include-prelude>
		<include-coda>/WEB-INF/jsp/includeAfterJsp.jsp</include-coda>
	</jsp-property-group> 
  </jsp-config>
  
  <servlet-mapping>
    <servlet-name>ServletJsp</servlet-name>
    <url-pattern>/servlet.jsp</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ServletJsp</servlet-name>
    <servlet-class>org.ingesup.messaging.servlets.ServletJsp</servlet-class>
  </servlet>
</web-app>